{
  "name": "rustup",
  "displayName": "rustup",
  "description": "Manages rustup override and notifies when there are available toolchain updates",
  "version": "1.0.4-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/emberian/vscode-rustup.git"
  },
  "license": "Apache-2.0",
  "publisher": "emberian",
  "keywords": [
    "rust",
    "rustup",
    "toolchain",
    "override",
    "update",
    "notification"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onLanguage:rust"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rustup.listToolchains",
        "title": "rustup: List installed toolchains"
      },
      {
        "command": "rustup.checkUpdates",
        "title": "rustup: Update Rust toolchains and rustup"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}